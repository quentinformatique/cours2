<?xml version="1.0" encoding="utf-8"?>

<!-- vue de l'activité permettant d'afficher la liste des modules enseignés
         au semestre 4
         fichier activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- ligne de titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/couleurTitre"
        android:textStyle="bold"
        android:textSize="@dimen/taille_titre"
        android:text="@string/texte_titre" />

    <!-- ligne de sous-titre avec l'intitulé de la liste affichée -->
    <TextView
        android:id="@+id/intitule_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/couleurTitre"
        android:textStyle="bold"
        android:textSize="@dimen/taille_titre"
        android:text="@string/texte_titre" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hauteur_barre"
        android:layout_marginVertical="@dimen/marge_moyenne"
        android:background="@color/couleurTitre">

    </View>

    <!-- liste des moodules sélectionnés -->
    <ListView
        android:id="@+id/liste_module"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true" />

</LinearLayout>
